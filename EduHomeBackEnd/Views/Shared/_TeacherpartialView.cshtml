@model List<Teacher>  
 
@foreach (Teacher teachers in Model)
                   {
                       <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a asp-controller="teacher" asp-action="details" asp-route-id="@teachers.Id"><img src="~/assets/img/teacher/@teachers.Image" alt="teacher"></a>  
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a asp-controller="teacher" asp-action="details" asp-route-id="@teachers.Id">@teachers.Name</a></h2>
                                <h4>@teachers.Profession</h4>
                                <ul>
                                    <li><a href="@teachers.FacebookURL"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@teachers.FacebookURL"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@teachers.FacebookURL"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="@teachers.FacebookURL"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                   }