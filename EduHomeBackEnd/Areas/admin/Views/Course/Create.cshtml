@model Course
@{
    ViewData["Title"] = "Create";
}


<div class="container mt-3">
    <h2>Create Course section</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Course name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Select images</label>
            <input asp-for="@Model.ImageFile" class="form-control" />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.AboutCourse" class="form-label">About Course</label>
            <input asp-for="@Model.AboutCourse" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.AboutCourse"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Apply" class="form-label">How to Apply</label>
            <input asp-for="@Model.Apply" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Apply"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Certification" class="form-label">Certification</label><br />
            <input asp-for="@Model.Certification"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Certification"></span>
        </div>
     <div class="mb-3">
            <label asp-for="@Model.TagIds" class="form-label">Tags</label>
            <select asp-for="@Model.TagIds" class="form-select" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))">
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.TagIds"></span>
        </div>
         <div class="mb-3">
            <label asp-for="@Model.CategoryId" class="form-label">Category</label>
            <select asp-for="@Model.CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
                <option value="0">Select category</option>
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CategoryId"></span>
        </div>
          <div class="mb-3">
            <label asp-for="@Model.CourseFeatures.Starts" class="form-label">Starts</label><br />
            <input asp-for="@Model.CourseFeatures.Starts"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CourseFeatures.Starts"></span>
        </div>
            <div class="mb-3">
            <label asp-for="@Model.CourseFeatures.Duration" class="form-label">Duration</label><br />
            <input asp-for="@Model.CourseFeatures.Duration"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CourseFeatures.Duration"></span>
        </div>
            <div class="mb-3">
            <label asp-for="@Model.CourseFeatures.ClassDuration" class="form-label">Class Duration</label><br />
            <input asp-for="@Model.CourseFeatures.ClassDuration"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CourseFeatures.ClassDuration"></span>
        </div>
            <div class="mb-3">
            <label asp-for="@Model.CourseFeatures.SkillLevel" class="form-label">Skill Level</label><br />
            <input asp-for="@Model.CourseFeatures.SkillLevel"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CourseFeatures.SkillLevel"></span>
       </div>
            <div class="mb-3">
            <label asp-for="@Model.CourseFeatures.Language" class="form-label">Language</label><br />
            <input asp-for="@Model.CourseFeatures.Language"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CourseFeatures.Language"></span>
        </div>
           <div class="mb-3">
            <label asp-for="@Model.CourseFeatures.StudentsCount" class="form-label">Students Count</label><br />
            <input asp-for="@Model.CourseFeatures.StudentsCount"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CourseFeatures.StudentsCount"></span>
        </div>
       

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}