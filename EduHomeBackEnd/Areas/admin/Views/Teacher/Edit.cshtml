@model Teacher
@{
    ViewData["Title"] = "Edit";
}

@section CSS{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="container mt-3">
    <h2>Edit Teacher section</h2>
     <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Teacher name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Profession" class="form-label">Profession</label>
            <input asp-for="@Model.Profession" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Profession"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Faculty" class="form-label">Faculty</label>
            <input asp-for="@Model.Faculty" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Faculty"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Degree" class="form-label">Degree</label>
            <input asp-for="@Model.Degree" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Degree"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Experience" class="form-label">Experience</label><br />
            <input asp-for="@Model.Experience"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Experience"></span>
        </div>
      <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email</label><br />
            <input asp-for="@Model.Email"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Email"></span>
        </div>
         <div class="mb-3">
            <label asp-for="@Model.Number" class="form-label">Number</label><br />
            <input asp-for="@Model.Number"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Number"></span>
        </div>
         <div class="mb-3">
            <label asp-for="@Model.FacebookURL" class="form-label">FacebookUrl</label><br />
            <input asp-for="@Model.FacebookURL"><br />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FacebookURL"></span>
        </div>
        
         <div class="mb-3">
            <label asp-for="@Model.HobbiesIds" class="form-label">Hobbies</label>
            <select asp-for="@Model.HobbiesIds" class="form-select">
                @foreach (var hobby in ViewBag.Hobbies)
                {
                    if (Model.TeacherHobbies.FirstOrDefault(th => th.HobbyId == hobby.Id) != null)
                    {
                        <option value="@hobby.Id" selected>@hobby.Name</option>
                    }
                    else
                    {
                        <option value="@hobby.Id">@hobby.Name</option>

                    }
                }
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.HobbiesIds"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Select images</label>
            <input asp-for="@Model.ImageFile" class="form-control" />
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $(".close").click(function () {
                $(this).parent().remove();
            })
        })
    </script>
}